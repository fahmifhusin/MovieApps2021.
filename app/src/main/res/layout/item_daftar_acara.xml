<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="@dimen/pembatas_default"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:id="@+id/bg_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:background="@android:color/background_dark">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/pembatas_small"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/img_acara"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/rating_acara"
            android:layout_width="@dimen/pembatas_larger"
            android:layout_height="@dimen/pembatas_larger"
            android:layout_marginStart="@dimen/pembatas_smaller"
            android:layout_marginTop="@dimen/pembatas_smaller"
            android:text="A"
            android:textAlignment="center"
            android:background="@color/colorAccent"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/acara_isfav"
            android:layout_width="@dimen/pembatas_larger"
            android:layout_height="@dimen/pembatas_larger"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/pembatas_smaller"
            android:layout_marginTop="@dimen/pembatas_smaller"
            android:src="@drawable/ic_fav" />
<LinearLayout
    android:id="@+id/title_tgl_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/img_acara"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/title_acara"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="9sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:padding="@dimen/pembatas_small"
        android:text="@string/title_acara_default"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/release_acara"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="7sp"
        android:textAlignment="center"
        android:padding="@dimen/pembatas_small"
        android:text="@string/tgl_release_default"
        tools:ignore="SmallSp" />
</LinearLayout>

        <TextView
            android:id="@+id/kategori_acara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pembatas_smaller"
            android:text="@string/kategori_default"
            android:textSize="10sp"
            android:layout_below="@id/title_tgl_layout"
            tools:ignore="SmallSp" />
        <TextView
            android:id="@+id/overview_acara"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/pembatas_smaller"
            android:layout_below="@id/kategori_acara"
            android:text="@string/overview_default"
            android:textSize="9sp"
            tools:ignore="SmallSp" />
    </RelativeLayout>
   </RelativeLayout>
</androidx.cardview.widget.CardView>